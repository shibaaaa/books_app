<h1><%= t("users.show.title") %></h1>
<p>
  <strong><%= User.human_attribute_name(:name) + ":" %></strong>
  <%= @user.name %>
</p>
<% if @user.avatar.attached? %>
<%= image_tag(@user.avatar.variant(resize_to_fit: [150, 150])) %>
<% end %>
<p>
  <strong><%= User.human_attribute_name(:email) + ":" %></strong>
  <%= @user.email %>
</p>
<p>
  <strong><%= User.human_attribute_name(:postal) + ":" %></strong>
  <%= @user.postal %>
</p>
<p>
  <strong><%= User.human_attribute_name(:address) + ":" %></strong>
  <%= @user.address %>
</p>
<p>
  <strong><%= User.human_attribute_name(:introduction) + ":" %></strong>
  <%= @user.introduction %>
</p>

<%= render "follow_form" %>
<% if current_user == @user %>
  <%= link_to t("Edit profile"), edit_user_registration_path %>
<% end %>

<%= link_to t("link.Back"), root_path %>
