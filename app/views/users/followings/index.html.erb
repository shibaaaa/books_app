<h2><%= t("followings.index.title", user: @user.name) %></h2>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("link.Back"), user_path(@user) %>
<%= link_to t("link.Top"), root_path %>
