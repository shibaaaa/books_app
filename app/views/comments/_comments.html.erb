<h3><%= t("comments.index.title") %></h3>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:user_name) %></th>
      <th><%= Comment.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% commentable.comments.each do |comment| %>
    <tr>
      <td><%= comment.user.name %></td>
      <td><%= comment.content %></td>
      <% if comment.user == current_user %>
        <td><%= link_to t("link.edit"), [:edit, comment.commentable, comment] %></td>
        <td id="delete_comment">
          <%= link_to t("link.destroy"), [comment.commentable, comment], method: :delete, data: { confirm: t("alert.sure") } %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
