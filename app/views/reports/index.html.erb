<h1><%= t("reports.index.title") %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:user_name) %></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.user.name, user_path(report.user_id) %></td>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to t("link.show"), report %></td>
        <% if report.user_id == current_user.id  %>
          <td><%= link_to t("link.edit"), edit_report_path(report) %></td>
          <td><%= link_to t("link.destroy"), report, method: :delete, data: { confirm: t("alert.sure") } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

